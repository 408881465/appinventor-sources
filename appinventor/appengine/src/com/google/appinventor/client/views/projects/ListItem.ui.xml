<!-- ListItem.ui.xml -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ai="urn:import:com.google.appinventor.client.components"
             ui:generatedFormat="com.google.gwt.i18n.server.PropertyCatalogFactory"
             ui:generatedKeys="com.google.gwt.i18n.server.keygen.MethodNameKeyGenerator"
             ui:generateLocales="default">
  <ui:with field="messages" type="com.google.appinventor.client.OdeMessages" />
  <ui:style src='../../resources/theme.css' type='com.google.appinventor.client.views.projects.ListItem.Style'>
    @external listItem;

    .listItem {
      display: grid;
      grid-template-columns: auto 1fr auto auto;
      align-items: center;
      height: 35px;
      grid-gap: 10px;
      padding: 0 20px;
      background: c-background;
    }

    .selected {
      background: c-highlight !important;
    }

    .field {
      font-family: f-h4;
      font-weight: 400;
      font-size: 1.1em;
      color: c-text;
      min-width: 200px;
    }

    .projectName {
      white-space: nowrap;
      width: fit-content;
    }

    .selection {
      padding-right: 10px;
    }
  </ui:style>
  <g:FlowPanel ui:field='container' styleName='{style.listItem}'>
    <g:CheckBox ui:field='checkBox' styleName='{style.selection}'/>
    <g:Label ui:field='nameLabel' styleName='{style.field} {style.projectName}'></g:Label>
    <g:Label ui:field='dateModifiedLabel' styleName='{style.field}'></g:Label>
    <g:Label ui:field='dateCreatedLabel' styleName='{style.field}'></g:Label>
  </g:FlowPanel>
</ui:UiBinder>
