<!-- ProjectsList.ui.xml -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ai="urn:import:com.google.appinventor.client.components"
             xmlns:aiv="urn:import:com.google.appinventor.client.views.projects"
             ui:generatedFormat="com.google.gwt.i18n.server.PropertyCatalogFactory"
             ui:generatedKeys="com.google.gwt.i18n.server.keygen.MethodNameKeyGenerator"
             ui:generateLocales="default">
  <ui:with field="messages" type="com.google.appinventor.client.OdeMessages" />
  <ui:style src='../../resources/theme.css'>
    .container {
      margin: 0 20px;
      border: 1px solid c-border-light;
      border-radius: l-border-radius-lg;
      overflow: auto;
      display: grid;
      grid-auto-rows: max-content;
    }

    .sticky {
      position: sticky;
      top: 0;
      z-index: 1;
    }

    .listHeader {
      display: grid;
      grid-template-columns: auto 1fr auto auto;
      align-items: center;
      height: 40px;
      grid-gap: 10px;
      padding: 0 20px;
      position: relative;
      border-bottom: 1px solid c-border-light;
      border-radius: l-border-radius;
      background: c-background;
    }

    .listHeader:after {
      content: '';
      position: absolute;
      top: 2px;
      left: 0;
      z-index: -1;
      width: 100%;
      height: 100%;
      border-radius: inherit;
      background-color: c-border-light;
    }

    .headerItem {
      min-width: 200px;
      display: flex;
      align-items: center;
    }

    .headerItemText {
      font-family: f-h4;
      font-weight: 600;
      font-size: 1.15em;
      color: c-text;
    }

    .sortIndicator {
      font-size: 18px;
    }

    .selection {
      padding-right: 10px;
    }
  </ui:style>
  <g:FlowPanel ui:field='container' styleName='{style.container}'>
    <g:FlowPanel ui:field='header' styleName='{style.sticky}'>
      <g:FlowPanel styleName='{style.listHeader}'>
        <g:CheckBox ui:field='checkBox' styleName='{style.selection}'/>
        <g:FlowPanel styleName='{style.headerItem}'>
          <g:Label text='Project name' styleName='{style.headerItemText}' />
          <ai:Icon icon='arrow_downward' styleName='{style.sortIndicator}' />
        </g:FlowPanel>
        <g:FlowPanel styleName='{style.headerItem}'>
          <g:Label text='Date modified' styleName='{style.headerItemText}' />
          <!-- <ai:Icon icon='arrow_downward' styleName='{style.sortIndicator}' /> -->
        </g:FlowPanel>
        <g:FlowPanel styleName='{style.headerItem}'>
          <g:Label text='Date created' styleName='{style.headerItemText}' />
          <!-- <ai:Icon icon='arrow_downward' styleName='{style.sortIndicator}' /> -->
        </g:FlowPanel>
      </g:FlowPanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
